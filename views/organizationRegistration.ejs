    <body>

        <div class="info">

            <h1>Register Your Organization</h1>
            <p>Please provide us with some information about your Organization.</p>
        </div>

        <form id = "inaglobe" method=POST action="">

            <div class="OrganizationHeader">
                <h2>Organization Signup</h2>
            </div>


            <div class="Organization">
                <li>    
                    <label for="name">Name:</label>
                    <input type="text" name="name" placeholder="Please enter the name of your Organization">
                </li>
                <li>    
                    <label for="address">Address:</label>
                    <input type="text" name="address" placeholder="Please enter the address of your Organization">
                </li>
                <li>
                    <label for="headperson">Head person:</label>
                    <input type="text" name="headperson" placeholder="Who is the head person of your Organization">
                </li>
                <li>
                    <label for="phoneNum">Phone Number:</label>
                    <input type="tel" id="phone" name="phoneNum" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" placeholder="A good phone number for contact">
                </li>
                <li>
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" placeholder="A good email for contact">
                </li>
                <input class="sub" type= "submit" value="submit">
    
            </div>


        </form>

    </body>
